<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test.com.carwash.CardNumber">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Credit Card Number"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="number"
        android:id="@+id/no"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="MM"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginTop="81dp"
        android:id="@+id/mm"
        android:layout_below="@+id/no"
        android:layout_alignParentStart="true"
        android:inputType="number"/>
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="YY"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_alignTop="@+id/mm"
        android:layout_toEndOf="@+id/mm"
        android:id="@+id/yy"
        android:inputType="number"/>
    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:textCursorDrawable="@drawable/color_cursor"
        android:id="@+id/cvv"
        android:layout_alignTop="@+id/yy"
        android:layout_toEndOf="@+id/yy"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD CARD NUMBER"
        android:background="#008744"
        android:id="@+id/addCard"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/mm"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
